{
    "name": "ImageKill",
    "description": "Kills every image on the page.  Kills 'em dead.",
    "version": "0.3.2",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "page_action": {
        "default_icon": "images/icon16.png"
    },

    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": ["js/trigger.js"],
        "run_at": "document_end",
        "all_frames": false
    }],

    "background_page": "background.html"
}
